{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<h1 class="mb-5">Nos catégories :</h1>
	<div class="row">
		{% for c in category %}
			<div class="col-4">
				<div class="card my-3">
					<div class="card-body">
						<h4 class="card-title">{{c.name}}</h4>
						<a href="{{path ('product_category',{'slug': c.slug})}}" class="btn btn-success btn-sm">Aller</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
