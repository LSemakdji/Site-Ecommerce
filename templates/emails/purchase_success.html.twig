<h1>Votre commande n°{{purchase.id}}</h1>
<p>Merci à vous
	{{user.fullName}}
</p>
<table class="table">
	<thead>
		<tr>
			<th>Produit</th>
			<th>Quantité</th>
			<th>P.U</th>
			<th>Date de commande</th>
			<th>Total</th>
		</tr>
	</thead>
	<tbody>
		{% for item in purchase.purchaseItems %}
			<tr>
				<td>{{item.productName}}</td>
				<td>{{item.quantity}}
				</td>
				<td>
					{{purchase.purchasedAt | date('d/m/Y H:i')}}
				</td>
				<td>{{item.productPrice / 100}}
					&euro;</td>
				<td>
					{{item.total / 100}}
					&euro;</td>
			</tr>
		{% endfor %}
	</tbody>
	<tfoot>
		<tr>
			<td colspan="3">Total :</td>
			<td>
				{{purchase.total / 100}}
				&euro;
			</td>
		</tr>
	</tfoot>
</table>
